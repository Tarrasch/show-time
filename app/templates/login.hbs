<style type="text/css">
  .token-input {
    height: 30px;
    position: relative;
    width: 93%;
    margin-left: 10px;
  }
</style>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-default">
        <div class="box-body">
          <div style="height: 300px">
            {{#if error}}
              <div class="alert alert-warning">
                Login failed, please try again
              </div>
            {{/if}}
            
            {{#if isLoading}}
              <div class="nothing">
                <span>
                  <i class="fa fa-spinner spin" style="font-size: 60px"></i>
                </span>
              </div>
            {{else}}
              <a class="btn btn-primary btn-sm pull-left" href="http://trakt.tv/pin/3829" target="_blank">Open</a>
              {{input placeholder="Click on the button and enter your token" type="text" value=token size="50" class="token-input form-control pull-left" action="login" on="enter"}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
