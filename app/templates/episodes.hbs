{{#if currentUser }}
  <div class="well">
    {{#if episodes}}
      <table class="table">
        <thead>
          <tr>
            <th>Show</th>
            <th>Episode</th>
            <th>Title</th>
            <th>Aired</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each episode in episodes}}
            <tr>
              <td>{{episode.show}}</td>
              <td>{{episode.what}}</td>
              <td>{{truncate episode.title}}</td>
              <td>{{time-ago-in-words episode.firstAired}}</td>
              <td>
                <div class="pull-right">
                  <button {{action "download" episode}} class="btn btn-sm btn-default" disabled={{episode.noMagnet}} target="_blank">
                    <i class="fa fa-download"></i>
                  </button>
                  <button class="btn btn-sm btn-default" {{action "remove" episode}}>
                    <i class="fa fa-times"></i>
                  </button>
                  <button class="btn btn-sm btn-default" {{action "seen" episode}}>
                    <i class="fa fa-eye"></i>
                  </button>
                  <button disabled={{episode.isLoading}} class="btn btn-sm btn-default" {{action "reload" episode}}>
                    <i class="fa fa-refresh"></i>
                  </button>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <div class="nothing">
        <span>
          No new episodes.
          {{#unless deactivateUpdateAll}}
            <a href="#" {{action "updateAll"}}>Reload?</a>
          {{else}}
            Loading ...
          {{/unless}}
        </span>
      </div>
    {{/if}}
  </div>
{{else}}
  <div class="nothing">
    <span>
      Please
      {{#link-to "login"}}login{{/link-to}}
      before using NeverAgain.
    </span>
  </div>
{{/if}}